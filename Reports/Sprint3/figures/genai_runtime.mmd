flowchart LR
    subgraph Assets["StreamingAssets/GeneratedContent"]
        Manifest[manifest.json]
        subgraph Chapters["chapters/chapter_N/"]
            NarJSON[narrative.json]
            MusicWAV[music.wav]
            VoiceWAV[voice_0.wav<br/>voice_1.wav<br/>voice_2.wav]
        end
    end

    subgraph Runtime["Runtime Phase - Unity"]
        Manifest --> Loader[GeneratedContentLoader]
        NarJSON --> Loader
        MusicWAV --> Loader
        VoiceWAV --> Loader

        Loader --> MusicMgr[ChapterMusicManager<br/>Crossfading]
        Loader --> DialogueUI[DialogueUI<br/>Text + Voice sync]
    end

    style Assets fill:#81c784,stroke:#388e3c,color:#000
    style Chapters fill:#a5d6a7,stroke:#2e7d32,color:#000
    style Runtime fill:#f06292,stroke:#c2185b,color:#000
